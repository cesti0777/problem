package samsung.practice1;

import java.util.Scanner;

public class P14503 {
	static int map[][] = new int[50][50];
	static boolean visited[][] = new boolean[50][50];
	static int n, m;// 가로세로
	static int r, c;// 위치
	static int d;// 방향

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);

		n = in.nextInt();
		m = in.nextInt();
		r = in.nextInt();
		c = in.nextInt();
		d = in.nextInt();
		visited[r][c] = true;

		for (int i = 0; i < n; i++) {
			for (int j = 0; j < m; j++) {
				map[i][j] = in.nextInt();
			}
		}

		int no = 0;
		int cnt = 1;
		while (true) {
			System.out.println(cnt);
			if(no == 4){//네방향 모두 막혀서 후진
				switch (d) {
				case 0: //북(상)
					if(map[r + 1][c] == 0){
						r = r + 1;
					}else{
						System.out.println(cnt);
						return;
					}
				case 1: //동(우)
					
					if(map[r][c - 1] == 0){
						c = c - 1;
					}else{
						System.out.println(cnt);
						return;
					}
				case 2: //남(하)
					
					if(map[r - 1][c] == 0){
						r = r - 1;
					}else{
						System.out.println(cnt);
						return;
					}
				case 3: //서(좌)
					if(map[r][c + 1] == 0){
						c = c + 1;
					}else{
						System.out.println(cnt);
						return;
					}
				}	
				
			}else{
				switch (d) {
				case 0: //북(상)
					if(map[r][c - 1] == 0){
						d = 3;
						c = c - 1;
						visited[r][c] = true;
						cnt++;
						break;
					}else{
						d = 3;
						no++;
						break;
					}
				case 1: //동(우)
					if(map[r - 1][c] == 0){
						d = 0;
						r = r - 1;
						visited[r][c] = true;
						cnt++;
						break;
					}else{
						d = 0;
						no++;
						break;
					}
				case 2: //남(하)
					if(map[r][c + 1] == 0){
						d = 1;
						c = c + 1;
						visited[r][c] = true;
						cnt++;
						break;
					}else{
						d = 1;
						no++;
						break;
					}
				case 3: //서(좌)
					if(map[r + 1][c] == 0){
						d = 2;
						r = r + 1;
						visited[r][c] = true;
						cnt++;
						break;
					}else{
						d = 2;
						no++;
						break;
					}
				}
			}
		}
	}
}
