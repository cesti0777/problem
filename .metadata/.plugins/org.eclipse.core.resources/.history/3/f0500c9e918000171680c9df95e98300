package problem.dfsbfs;

import java.util.LinkedList;
import java.util.Queue;
import java.util.Scanner;

public class P2178 {
	static int n, m;
	static int[][] map;
	static Queue<Integer[]> q;
	static boolean[][] visited;
	static int[] dx = {0, 0, -1, 1};
	static int[] dy = {-1, 1, 0, 0};
	public static void bfs(int curX, int curY, int length) {
		visited[curX][curY] = true;
		Integer[] curInfo = new Integer[3];
		curInfo[0] = curX;
		curInfo[1] = curY;
		curInfo[2] = length;
		q.add(curInfo);
		while (!q.isEmpty()) {
			Integer[] here = q.remove();
			curX = here[0];
			curY = here[1];
			length = here[2];
			if(curX == m && curY == n){
				System.out.println(length);
			}
			for(int i = 0; i < 4; i++){
				int x = curX + dx[i];
				int y = curY + dy[i];
				if (x <= m && y <= n && !visited[y][x] && map[y][x] == 1){
					visited[y][x] = true;
					curInfo[0] = x;
					curInfo[1] = y;
					curInfo[2] = length + 1;
					q.add(curInfo);
				}
			}
		}
	}

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		try {
			n = in.nextInt();
			m = in.nextInt();
			map = new int[n + 1][m + 1];
			visited = new boolean[n + 1][m + 1];
			q = new LinkedList<>();
			in.nextLine();
			for (int i = 1; i <= n; i++) {
				String line = in.nextLine();
				for (int j = 1; j <= m; j++) {
					map[i][j] = Character.getNumericValue(line.charAt(j - 1));
				}
			}
			bfs(1, 1, 1);
		} finally {
			in.close();
			in = null;
		}
	}
}

// 예제 입력 복사
//4 6
//101111
//101010
//101011
//111011
// 예제 출력 복사
// 15
// 예제 입력 2 복사
//4 6
//110110
//110110
//111111
//111101
// 예제 출력 2 복사
// 9