package problem.dfsbfs;

import java.util.Scanner;

public class P2178 {
	static int n, m, distance;
	static int[][] map;
	static boolean[][] visited;
	static boolean[][][][] edge;

	public static void dfs(int curX, int curY, int length) {
		visited[curY][curX] = true;
		if(curY == n && curX == m){
			if(length < distance){
				distance = length;
				return;
			}
		}
		if(curY + 1 <= n && !visited[curY + 1][curX] && map[curY + 1][curX] == 1){
			dfs(curX, curY + 1, length + 1);
		}
		if(curX + 1 <= m && !visited[curY][curX + 1] && map[curY][curX + 1] == 1){
			dfs(curX + 1, curY, length + 1);		
		}
		if(curY - 1 >= 1 && !visited[curY - 1][curX] && map[curY - 1][curX] == 1){
			dfs(curX, curY - 1, length + 1);
		}
		if(curX - 1 >= 1 && !visited[curY][curX - 1] && map[curY][curX - 1] == 1){
			dfs(curX - 1, curY, length + 1);
		}
		
	}

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		try {
			n = in.nextInt();
			m = in.nextInt();
			distance = n * m;
			map = new int[n + 1][m + 1];
			visited = new boolean[n + 1][m + 1];
			edge = new boolean[n + 1][m + 1][n + 1][m + 1];
			// 맵 입력
			in.nextLine();
			for (int i = 1; i <= n; i++) {
				String line = in.nextLine();
				for (int j = 1; j <= m; j++) {
					map[i][j] = Character.getNumericValue(line.charAt(j - 1));
				}
			}

			dfs(1, 1, min);

		} finally {
			in.close();
			in = null;
		}
	}

}

// 예제 입력 복사
// 4 6
// 101111
// 101010
// 101011
// 111011
// 예제 출력 복사
// 15
// 예제 입력 2 복사
// 4 6
// 110110
// 110110
// 111111
// 111101
// 예제 출력 2 복사
// 9