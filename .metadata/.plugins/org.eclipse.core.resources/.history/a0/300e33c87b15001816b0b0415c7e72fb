package study;

import java.util.ArrayList;
import java.util.Scanner;
 
public class SE1952 {
 
    static int testCaseCnt;
    static int[] costs;
    static ArrayList<Integer> month;
    static int answer;
 
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
 
        testCaseCnt = in.nextInt();
 
        for (int testCase = 1; testCase <= testCaseCnt; testCase++) {
 
            costs = new int[4];
            for (int j = 0; j < 4; j++) {
                costs[j] = in.nextInt();
            }
 
            month = new ArrayList<>();
            for (int j = 0; j < 12; j++) {
                month.add(in.nextInt());
            }
 
            answer = costs[3];
            execute(0, 0);
            System.out.println("#" + testCase + " " + answer);
        }
    }
 
    public static void execute(int day, int total) {
         
        if(day >= month.size()){
            answer = Math.min(answer, total);
            return;
        }
         
        int dayCnt = month.get(day);
         
        execute(day + 1, total + dayCnt * costs[0]);
         
        execute(day + 1, total + costs[1]);
         
        execute(day + 3, total + costs[2]);
    }
}